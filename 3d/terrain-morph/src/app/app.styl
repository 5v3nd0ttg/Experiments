@require "partials/_loader.styl"
@require "partials/_colors.styl"

html,body
  margin 0
  padding 0
  display flex
  width 100vw
  height 100vh
  *
    box-sizing border-box

// Optimize kerning of all text rendered
body, input, textarea, select, button
  text-rendering optimizeLegibility
  -webkit-font-smoothing: antialiased !important;

#instructions
  position fixed
  height 100vh
  width 100vw
  padding 15px
  background rgba(0,0,0,0.5)
  z-index 1
  display none
  justify-content center
  align-items center
  flex-direction column
  color white
  cursor pointer
