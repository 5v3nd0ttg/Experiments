
button.combo
  border 2px solid black
  outline none
  &:hover
    background red
ul.combo
  display none
.combo
  font-family 'Source Code Pro', sans
  font-size 2em
  position absolute
  right 15px
  padding 10px
  border-radius 10px
  height auto
  max-height 300px
  overflow-x hidden
  overflow-y scroll
  display block
  float left
  min-width 160px
  list-style none
  border 1px solid rgba(0,0,0,0.15)
  box-shadow 0 6px 12px rgba(0,0,0,.175)
  box-sizing border-box
  li
    box-sizing border-box
    display list-item
    width 100%
    text-align -webkit-match-parent
    list-style none
    .selected
      background-color rgba(255,255,255,0.1)
    a:hover
      text-decoration none
      background-color rgba(255,255,255,0.2)
    a
      display block
      clear both
      font-weight 400
      whitespace no-wrap
      text-decoration none
      cursor auto

// Debug container
.rollbar
  margin 5px
  background-color dark-color
  transition all 1s ease
  overflow-x hidden
  overflow-y scroll
  white-space nowrap
  max-height 50%
  width 40px; height 10px
  @extend .border,.anchor-bottom-right
  rounded(15px) //border radius on all sides
  inner-shadow(0,0,25px,0.5)
  &.button
    border-top 30px double base-color + #101030
    border-bottom 10px solid base-color + #101030
    border-left 10px solid base-color + #101030
    border-right 10px solid base-color + #101030
    color rgba(0,0,0,0) !important
    &:hover
      background-color dark-color + #303060
  &:hover
    background-color dark-color + #050513
    border-color     base-color + #303060
    cursor           pointer
    transition border 0.5s ease
    user-select none
