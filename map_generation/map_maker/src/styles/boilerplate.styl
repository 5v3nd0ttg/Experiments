// Base Colors
base-color  = #999
light-color = base-color + #666
dark-color  = base-color - #666
error-color = #C33

// Base styles
html,button,input,select,textarea
  color dark-color

html
  font-size 1em
  line-height 1.4

body
  background base-color
  font-family 'Courier New', sans-serif
  font-weight 800
  color light-color

// Fixes
::-moz-selection
  background dark-color
  text-shadow none

::selection
  background dark-color
  text-shadow none

// consolidation functions
.absolute
  position absolute
.border
  border 2px solid dark-color + #111
.border-thin
  border 1px solid dark-color + #111

// Anchor sides
.anchor-top
  top 0
  @extend .absolute
.anchor-bottom
  bottom 0
  @extend .absolute
.anchor-left
  left 0
  @extend .absolute
.anchor-right
  right 0
  @extend .absolute

// Anchor corners
.anchor-bottom-right
  @extend .anchor-bottom,.anchor-right
.anchor-bottom-left
  @extend .anchor-bottom,.anchor-left
.anchor-top-left
  @extend .anchor-top,.anchor-left
.anchor-top-right
  @extend .anchor-top,.anchor-right

// Anchor fill side
.anchor-fill-top
  @extend .anchor-top-left,.anchor-right
.anchor-fill-bottom
  @extend .anchor-bottom-right,.anchor-left
.anchor-fill-right
  @extend .anchor-bottom-right,.anchor-top
.anchor-fill-left
  @extend .anchor-top-left,.anchor-bottom

// Anchor fill screen
.anchor-fill
  @extend .anchor-top-left,.anchor-bottom-right
